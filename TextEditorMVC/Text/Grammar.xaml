<Window x:Class="TextEditorMVC.Text.Grammar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditorMVC.Text"
        mc:Ignorable="d"
        Title="Разработка грамматики" Height="650" Width="900">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label x:Name="title" Grid.Row="0" FontSize="18" HorizontalAlignment="Center"/>
            <AccessText x:Name="ContentLabel" Grid.Row="1" FontSize="14" TextWrapping="WrapWithOverflow" Margin="15,0,10,0"/>
        </Grid>
    </ScrollViewer>
</Window>
